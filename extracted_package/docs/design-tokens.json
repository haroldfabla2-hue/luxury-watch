{
  "$schema": "https://design-tokens.github.io/community-group/format.json",
  "$version": "1.0",
  "$description": "LuxuryWatch Design Tokens - Material-Inspired Luxury & Sophisticated",
  "color": {
    "gold": {
      "$description": "Primary brand color inspired by 18k yellow/rose gold watch cases",
      "50": { "$type": "color", "$value": "#FDF8E8" },
      "100": { "$type": "color", "$value": "#F4E4B5" },
      "500": { "$type": "color", "$value": "#B8860B" },
      "700": { "$type": "color", "$value": "#9A7209" },
      "900": { "$type": "color", "$value": "#6B5006" }
    },
    "titanium": {
      "$description": "Secondary brand color inspired by Grade 5 titanium aerospace material",
      "50": { "$type": "color", "$value": "#F0F3F5" },
      "100": { "$type": "color", "$value": "#E3E6E8" },
      "500": { "$type": "color", "$value": "#8B9AA6" },
      "700": { "$type": "color", "$value": "#6B7A86" },
      "900": { "$type": "color", "$value": "#3A4550" }
    },
    "ceramic": {
      "$description": "Tertiary brand color inspired by high-tech ceramic watch bezels",
      "50": { "$type": "color", "$value": "#F5F5F5" },
      "500": { "$type": "color", "$value": "#2C2F33" },
      "700": { "$type": "color", "$value": "#1F2125" },
      "900": { "$type": "color", "$value": "#1A1D20" }
    },
    "neutral": {
      "$description": "Warm ivory neutrals with subtle champagne undertone",
      "50": { "$type": "color", "$value": "#FAFAF8" },
      "100": { "$type": "color", "$value": "#F5F4F0" },
      "200": { "$type": "color", "$value": "#E8E6E0" },
      "500": { "$type": "color", "$value": "#9B9A94" },
      "700": { "$type": "color", "$value": "#4A4A45" },
      "900": { "$type": "color", "$value": "#1C1C19" }
    },
    "semantic": {
      "success": { "$type": "color", "$value": "#5A7A5F" },
      "warning": { "$type": "color", "$value": "#9A7209" },
      "error": { "$type": "color", "$value": "#8B4A4A" },
      "info": { "$type": "color", "$value": "#6B7A86" }
    },
    "background": {
      "page": { "$type": "color", "$value": "{color.neutral.50}" },
      "surface": { "$type": "color", "$value": "{color.neutral.100}" },
      "elevated": { "$type": "color", "$value": "{color.ceramic.500}" }
    },
    "text": {
      "primary": { "$type": "color", "$value": "{color.neutral.900}" },
      "secondary": { "$type": "color", "$value": "{color.neutral.700}" },
      "muted": { "$type": "color", "$value": "{color.neutral.500}" },
      "inverse": { "$type": "color", "$value": "{color.neutral.50}" }
    },
    "border": {
      "default": { "$type": "color", "$value": "{color.neutral.200}" },
      "accent": { "$type": "color", "$value": "{color.gold.500}" },
      "muted": { "$type": "color", "$value": "{color.titanium.500}" }
    }
  },
  "typography": {
    "fontFamily": {
      "headline": {
        "$type": "fontFamily",
        "$value": ["Playfair Display", "Georgia", "serif"]
      },
      "body": {
        "$type": "fontFamily",
        "$value": ["Lato", "-apple-system", "BlinkMacSystemFont", "sans-serif"]
      }
    },
    "fontSize": {
      "display": { "$type": "dimension", "$value": "96px" },
      "h1": { "$type": "dimension", "$value": "72px" },
      "h2": { "$type": "dimension", "$value": "56px" },
      "h3": { "$type": "dimension", "$value": "40px" },
      "h4": { "$type": "dimension", "$value": "32px" },
      "bodyLarge": { "$type": "dimension", "$value": "24px" },
      "body": { "$type": "dimension", "$value": "18px" },
      "bodySmall": { "$type": "dimension", "$value": "16px" },
      "caption": { "$type": "dimension", "$value": "14px" },
      "labelCaps": { "$type": "dimension", "$value": "12px" }
    },
    "fontWeight": {
      "light": { "$type": "number", "$value": 300 },
      "regular": { "$type": "number", "$value": 400 },
      "medium": { "$type": "number", "$value": 500 },
      "semibold": { "$type": "number", "$value": 600 },
      "bold": { "$type": "number", "$value": 700 }
    },
    "lineHeight": {
      "tight": { "$type": "number", "$value": 1.1 },
      "snug": { "$type": "number", "$value": 1.2 },
      "normal": { "$type": "number", "$value": 1.3 },
      "relaxed": { "$type": "number", "$value": 1.6 },
      "loose": { "$type": "number", "$value": 1.7 }
    },
    "letterSpacing": {
      "tighter": { "$type": "dimension", "$value": "-0.02em" },
      "tight": { "$type": "dimension", "$value": "-0.01em" },
      "normal": { "$type": "dimension", "$value": "0" },
      "wide": { "$type": "dimension", "$value": "0.01em" },
      "wider": { "$type": "dimension", "$value": "0.05em" },
      "widest": { "$type": "dimension", "$value": "0.12em" }
    }
  },
  "spacing": {
    "$description": "4pt grid system, prefer 8pt multiples",
    "xs": { "$type": "dimension", "$value": "8px" },
    "sm": { "$type": "dimension", "$value": "16px" },
    "md": { "$type": "dimension", "$value": "24px" },
    "lg": { "$type": "dimension", "$value": "32px" },
    "xl": { "$type": "dimension", "$value": "48px" },
    "2xl": { "$type": "dimension", "$value": "64px" },
    "3xl": { "$type": "dimension", "$value": "96px" },
    "4xl": { "$type": "dimension", "$value": "128px" },
    "5xl": { "$type": "dimension", "$value": "160px" }
  },
  "borderRadius": {
    "sm": { "$type": "dimension", "$value": "8px" },
    "md": { "$type": "dimension", "$value": "12px" },
    "lg": { "$type": "dimension", "$value": "16px" },
    "full": { "$type": "dimension", "$value": "9999px" }
  },
  "boxShadow": {
    "card": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "4px",
        "blur": "12px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.08)"
      }
    },
    "cardHover": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "12px",
        "blur": "24px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.12)"
      }
    },
    "modal": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "24px",
        "blur": "48px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.15)"
      }
    },
    "gold": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "8px",
        "blur": "16px",
        "spread": "0px",
        "color": "rgba(184, 134, 11, 0.2)"
      }
    }
  },
  "animation": {
    "duration": {
      "fast": { "$type": "duration", "$value": "300ms" },
      "standard": { "$type": "duration", "$value": "400ms" },
      "luxury": { "$type": "duration", "$value": "500ms" },
      "slow": { "$type": "duration", "$value": "600ms" }
    },
    "easing": {
      "default": {
        "$type": "cubicBezier",
        "$value": [0.4, 0.0, 0.2, 1]
      },
      "elegance": {
        "$type": "cubicBezier",
        "$value": [0.25, 0.46, 0.45, 0.94]
      },
      "easeOut": {
        "$type": "cubicBezier",
        "$value": [0, 0, 0.2, 1]
      }
    }
  },
  "breakpoint": {
    "xs": { "$type": "dimension", "$value": "640px" },
    "sm": { "$type": "dimension", "$value": "640px" },
    "md": { "$type": "dimension", "$value": "768px" },
    "lg": { "$type": "dimension", "$value": "1024px" },
    "xl": { "$type": "dimension", "$value": "1280px" },
    "2xl": { "$type": "dimension", "$value": "1536px" }
  }
}
