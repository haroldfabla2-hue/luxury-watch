{
  "name": "light_optimization",
  "description": "Optimizaci√≥n ligera para modelos simples",
  "optimization": {
    "enable_draco": true,
    "draco_compression_level": 3,
    "enable_texture_compression": true,
    "texture_format": "webp",
    "basis_quality": "fast",
    "remove_extras": true,
    "remove_metadata": true,
    "simplify_geometries": false,
    "geometry_precision": 14,
    "normal_precision": 10,
    "texcoord_precision": 12
  },
  "lod_generation": {
    "enabled": false,
    "levels": 2,
    "distance_based": false,
    "quality_threshold": 0.05
  },
  "device_profiles": {
    "mobile": {
      "max_texture_size": 512,
      "texture_quality": 0.8,
      "geometry_simplification": 0.2,
      "draco_compression_level": 3,
      "generate_lods": false,
      "lod_distance_divisor": 1.0,
      "target_fps": 30,
      "memory_limit_mb": 256
    },
    "tablet": {
      "max_texture_size": 1024,
      "texture_quality": 0.9,
      "geometry_simplification": 0.1,
      "draco_compression_level": 3,
      "generate_lods": false,
      "lod_distance_divisor": 1.5,
      "target_fps": 45,
      "memory_limit_mb": 512
    },
    "desktop": {
      "max_texture_size": 2048,
      "texture_quality": 1.0,
      "geometry_simplification": 0.0,
      "draco_compression_level": 2,
      "generate_lods": false,
      "lod_distance_divisor": 2.0,
      "target_fps": 60,
      "memory_limit_mb": 1024
    }
  },
  "output": {
    "format": "gltf+bin",
    "embed_textures": true,
    "separate_textures": false,
    "create_materials": true,
    "minify": false,
    "sort_by": "name"
  },
  "validation": {
    "validate_output": true,
    "check_mesh_integrity": true,
    "verify_textures": true,
    "test_loading": false
  },
  "performance": {
    "parallel_processing": true,
    "max_workers": 2,
    "batch_size": 5,
    "memory_limit_gb": 4,
    "cache_enabled": true,
    "cache_size_mb": 256
  },
  "reporting": {
    "generate_html_report": false,
    "generate_json_report": true,
    "include_comparison": true,
    "save_intermediate": false,
    "verbose_logging": false
  }
}