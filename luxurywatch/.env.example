# Variables de entorno para LuxuryWatch Frontend
# Copia este archivo como .env y configura según tu entorno

# ==================== API CONFIGURATION ====================
# URL del backend API (cambiar según tu entorno)
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Para producción, usar:
# VITE_API_BASE_URL=https://your-domain.com/api
# VITE_WS_URL=wss://your-domain.com

# ==================== APPLICATION CONFIG ====================
# Nombre de la aplicación
VITE_APP_NAME=LuxuryWatch
VITE_APP_VERSION=2.0.0

# Configuración por defecto
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_LANGUAGE=es

# ==================== FEATURE FLAGS ====================
# Habilitar/deshabilitar funcionalidades
VITE_ENABLE_3D_CONFIGURATOR=true
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_CRM=true
VITE_ENABLE_BLOG=true
VITE_ENABLE_MARKETPLACE=true
VITE_ENABLE_AR_VIEWER=true

# ==================== THIRD-PARTY INTEGRATIONS ====================
# Stripe (para pagos)
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Google Analytics (opcional)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (para error tracking)
# VITE_SENTRY_DSN=https://...

# ==================== DEVELOPMENT SETTINGS ====================
# Solo para desarrollo
VITE_SHOW_DEBUG_INFO=true
VITE_ENABLE_DEV_TOOLS=true
VITE_MOCK_API_RESPONSES=false

# ==================== PERFORMANCE SETTINGS ====================
# Configuraciones de rendimiento
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=cache-first
VITE_IMAGE_OPTIMIZATION=true

# ==================== SECURITY SETTINGS ====================
# Configuraciones de seguridad
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=false
VITE_SESSION_TIMEOUT=3600000

# ==================== CUSTOMIZATION ====================
# Branding y personalización
VITE_COMPANY_NAME=LuxuryWatch
VITE_COMPANY_LOGO=/images/logo.png
VITE_PRIMARY_COLOR=#1f2937
VITE_SECONDARY_COLOR=#3b82f6

# ==================== REGIONAL SETTINGS ====================
# Configuraciones regionales
VITE_TIMEZONE=Europe/Madrid
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_CURRENCY_SYMBOL=$
VITE_THOUSAND_SEPARATOR=,
VITE_DECIMAL_SEPARATOR=.

# ==================== SOCIAL MEDIA ====================
# Enlaces a redes sociales
# VITE_FACEBOOK_URL=https://facebook.com/luxurywatch
# VITE_INSTAGRAM_URL=https://instagram.com/luxurywatch
# VITE_TWITTER_URL=https://twitter.com/luxurywatch
# VITE_YOUTUBE_URL=https://youtube.com/luxurywatch

# ==================== CONTACT INFORMATION ====================
# Información de contacto
VITE_SUPPORT_EMAIL=support@luxurywatch.com
VITE_SALES_EMAIL=sales@luxurywatch.com
VITE_PHONE_NUMBER=+34 900 123 456
VITE_WHATSAPP_NUMBER=+34 600 123 456

# ==================== SHIPPING & TAX ====================
# Configuraciones de envío e impuestos
VITE_DEFAULT_SHIPPING_COST=25.00
VITE_FREE_SHIPPING_THRESHOLD=500.00
VITE_TAX_RATE=0.21
VITE_SHIPPING_COUNTRIES=ES,FR,DE,IT,PT

# ==================== ANALYTICS ====================
# Configuraciones de analítica
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_SAMPLE_RATE=100
VITE_TRACK_PAGE_VIEWS=true
VITE_TRACK_USER_EVENTS=true

# ==================== SEO & METADATA ====================
# Configuraciones SEO
VITE_SITE_URL=https://luxurywatch.com
VITE_DEFAULT_TITLE=LuxuryWatch - Configurador de Relojes de Lujo
VITE_DEFAULT_DESCRIPTION=Configura tu reloj perfecto con nuestro configurador 3D interactivo
VITE_DEFAULT_KEYWORDS=relojes,lujo,configurador,3D,personalizado

# ==================== CDN & ASSETS ====================
# Configuraciones de CDN
# VITE_CDN_BASE_URL=https://cdn.luxurywatch.com
# VITE_IMAGE_CDN_BASE_URL=https://images.luxurywatch.com
VITE_STATIC_ASSETS_PATH=/static

# ==================== TESTING ====================
# Configuraciones para testing
VITE_TEST_MODE=false
VITE_MOCK_USER_DATA=false
VITE_SKIP_AUTH_IN_TESTS=false