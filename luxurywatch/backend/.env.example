# LuxurWatch Backend Environment Configuration
# Copy this file to .env and configure the values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/luxurywatch_db"
# For local development without database:
# DATABASE_URL="file:./dev.db"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
# For local development without Redis:
# REDIS_URL=""

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
HOST="0.0.0.0"
NODE_ENV="development"

# AI Chat Configuration (Optional)
OPENAI_API_KEY=""
GEMINI_API_KEY=""
ANTHROPIC_API_KEY=""

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# SSL Configuration (Production)
SSL_KEY_PATH=""
SSL_CERT_PATH=""

# Email Configuration (Optional)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# File Upload Configuration
MAX_FILE_SIZE="10MB"
UPLOAD_PATH="./uploads"

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this-in-production"