# =====================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================

# PostgreSQL
DATABASE_URL="postgresql://username:password@atlanticserver.net:5432/luxurywatch_db?sslmode=require"
DB_HOST="atlanticserver.net"
DB_PORT=5432
DB_NAME="luxurywatch_db"
DB_USER="luxurywatch_user"
DB_PASSWORD="your_secure_password"
DB_POOL_MIN=10
DB_POOL_MAX=100
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_STATEMENT_TIMEOUT=60000
DB_QUERY_TIMEOUT=60000

# Redis
REDIS_URL="redis://atlanticserver.net:6379"
REDIS_HOST="atlanticserver.net"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# =====================================
# SEGURIDAD Y AUTENTICACIÓN
# =====================================

# JWT
JWT_SECRET="your-super-secure-jwt-secret-key-here-256-bits"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# API Security
API_KEY_SECRET="your-api-key-secret"

# =====================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================

PORT=3001
HOST="0.0.0.0"
NODE_ENV="production"

# CORS
CORS_ORIGIN="https://luxurywatch.com,https://admin.luxurywatch.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================
# API KEYS DE INTELIGENCIA ARTIFICIAL
# =====================================

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_ORG_ID="org-your-organization-id"

# Anthropic (Claude)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# Google AI
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# HuggingFace
HUGGINGFACE_API_KEY="hf_your-huggingface-api-key"

# OpenRouter
OPENROUTER_API_KEY="or_your-openrouter-api-key"

# Azure OpenAI (Opcional)
AZURE_OPENAI_API_KEY="your-azure-openai-key"
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4"

# =====================================
# ALMACENAMIENTO DE ARCHIVOS
# =====================================

# Local Storage
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760

# AWS S3 (Opcional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="luxurywatch-assets"
AWS_CLOUDFRONT_DOMAIN="d1234567890.cloudfront.net"

# Google Cloud Storage (Opcional)
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_BUCKET="luxurywatch-assets"

# =====================================
# CONFIGURACIÓN DE EMAIL
# =====================================

# SMTP
SMTP_HOST="mail.atlantic.net"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="noreply@luxurywatch.com"
SMTP_PASS="your-email-password"

# Email Provider (Opcional - SendGrid, Mailgun, etc.)
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
MAILGUN_API_KEY="key-your-mailgun-api-key"
MAILGUN_DOMAIN="mg.luxurywatch.com"

# =====================================
# PAGOS Y COMERCIO
# =====================================

# Stripe
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"
STRIPE_CONNECT_CLIENT_ID="ca_your-connect-client-id"

# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox" # o "live"

# =====================================
# WEBHOOKS Y INTEGRACIONES
# =====================================

# Webhook Base URL
WEBHOOK_BASE_URL="https://api.luxurywatch.com"
WEBHOOK_SECRET="your-webhook-secret"

# External Services
SHOPIFY_WEBHOOK_SECRET="your-shopify-webhook-secret"
ZAPIER_WEBHOOK_URL="https://hooks.zapier.com/hooks/catch/123456/your-webhook-id"

# =====================================
# ANALYTICS Y MONITOREO
# =====================================

# Google Analytics
GA_TRACKING_ID="G-XXXXXXXXXX"

# Segment
SEGMENT_WRITE_KEY="your-segment-write-key"

# Sentry
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# LogRocket
LOGROCKET_APP_ID="your-logrocket-app-id"

# =====================================
# CHAT Y CUSTOMER SUPPORT
# =====================================

# Intercom
INTERCOM_APP_ID="your-intercom-app-id"
INTERCOM_API_KEY="your-intercom-api-key"

# Zendesk
ZENDESK_SUBDOMAIN="your-subdomain"
ZENDESK_API_TOKEN="your-zendesk-api-token"

# Twilio (Para SMS/WhatsApp)
TWILIO_ACCOUNT_SID="ACyour-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# =====================================
# SMS Y COMUNICACIONES
# =====================================

# Twilio Verify
TWILIO_VERIFY_SERVICE_SID="VAyour-verify-service-sid"

# AWS SNS
AWS_SNS_REGION="us-east-1"
AWS_SNS_TOPIC_ARN="arn:aws:sns:us-east-1:123456789012:luxurywatch-notifications"

# =====================================
# SEARCH Y ELASTICSEARCH
# =====================================

# Elasticsearch
ELASTICSEARCH_URL="https://your-elasticsearch-cluster.com:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="your-elasticsearch-password"

# Algolia
ALGOLIA_APP_ID="your-algolia-app-id"
ALGOLIA_API_KEY="your-algolia-api-key"
ALGOLIA_SEARCH_KEY="your-algolia-search-key"

# =====================================
# CDN Y OPTIMIZACIÓN
# =====================================

# CloudFlare
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_ZONE_ID="your-zone-id"

# AWS CloudFront
CLOUDFRONT_DISTRIBUTION_ID="E1234567890ABC"

# =====================================
# CONFIGURACIÓN DE LOGGING
# =====================================

LOG_LEVEL="info"
LOG_FILE_PATH="/var/log/luxurywatch/app.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES="5"

# Winston Transports
LOG_TRANSPORTS="console,file,database"

# =====================================
# DESARROLLO Y TESTING
# =====================================

# Testing
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/luxurywatch_test"
NODE_ENV_TEST="test"

# Development
DEV_MOCK_AI_RESPONSES=false
DEV_SKIP_RATE_LIMITING=true

# =====================================
# CARACTERÍSTICAS ESPECÍFICAS
# =====================================

# 3D Configurator
ENABLE_3D_CONFIGURATOR=true
THREE_JS_CDN_URL="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"

# AI Features
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_AI_CHAT=true
AI_MODEL_PREFERENCE="openai:gpt-4"

# CRM Features
ENABLE_ADVANCED_CRM=true
ENABLE_LEAD_SCORING=true
ENABLE_EMAIL_AUTOMATION=true

# E-commerce
ENABLE_MULTIPLE_CURRENCIES=true
DEFAULT_CURRENCY="USD"
ENABLE_TAX_CALCULATION=true
ENABLE_DISCOUNT_CODES=true

# =====================================
# CONFIGURACIÓN DE BACKUP
# =====================================

# AWS S3 Backup
BACKUP_S3_BUCKET="luxurywatch-backups"
BACKUP_S3_REGION="us-east-1"
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"

# Database Backup
DB_BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
DB_BACKUP_RETENTION_DAYS=30

# =====================================
# CONFIGURACIÓN AVANZADA
# =====================================

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=300000

# Cache TTL
CACHE_TTL_PRODUCTS=3600
CACHE_TTL_CUSTOMERS=1800
CACHE_TTL_CHAT=3600
CACHE_TTL_API_CONFIG=7200

# Session Configuration
SESSION_SECRET="your-session-secret"
SESSION_TTL=86400
MAX_SESSIONS_PER_USER=5

# =====================================
# DEPLOYMENT
# =====================================

# Docker
DOCKER_REGISTRY="your-registry.com"
DOCKER_IMAGE_TAG="latest"

# PM2
PM2_INSTANCES="max"
PM2_MAX_MEMORY="500M"

# =====================================
# DOMINIOS Y URLs
# =====================================

# Main Domain
DOMAIN="luxurywatch.com"
API_DOMAIN="api.luxurywatch.com"
ADMIN_DOMAIN="admin.luxurywatch.com"
CDN_DOMAIN="cdn.luxurywatch.com"

# External URLs
DOCS_URL="https://docs.luxurywatch.com"
SUPPORT_URL="https://support.luxurywatch.com"
STATUS_URL="https://status.luxurywatch.com"

# =====================================
# NOTAS IMPORTANTES
# =====================================

# 1. NUNCA commitear este archivo con valores reales
# 2. Usar variables de entorno en producción
# 3. Rotar API keys regularmente
# 4. Usar contraseñas fuertes (mínimo 16 caracteres)
# 5. Configurar SSL/TLS en producción
# 6. Usar diferentes bases de datos para desarrollo y producción
# 7. Configurar backups automáticos
# 8. Monitorear logs y errores en producción
# 9. Configurar alertas para servicios críticos
# 10. Usar secretos management (AWS Secrets Manager, HashiCorp Vault, etc.)
